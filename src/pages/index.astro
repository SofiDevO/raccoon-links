---
import LeftBento from "@organisms/left-bento/LeftBento.astro";
import Layout from "@layouts/Layout.astro";
import SocialIcons from "@src/components/atoms/SocialIcons.astro";
import BentoMain from "@organisms/BentoMain.astro";
import SupportBento from "@organisms/SupportBento.astro";
import Header from "@src/components/organisms/Header.astro";
export const prerender = false;
import userData from "@data/user.json";
import BlogPost from "@src/components/atoms/BlogPost/BlogPost";
import Title from "@src/components/atoms/Title.astro";
import SwiperComponent from "@molecules/SwiperComponent/SwiperComponent.astro";
---

<Layout title="Welcome to Astro.">
  <Header userData={userData}/>
  <main class="space-y-4">
    <SocialIcons />
    <BentoMain />
    <Title title="Mi artículo más reciente" class="text-center bg-gradient-to-r from-caracol to-celeste bg-clip-text text-5xl font-bold text-transparent my-4"/>
    <BlogPost  />
    <Title title="Apoya mi contenido" class="text-center bg-gradient-to-r from-caracol to-celeste bg-clip-text text-5xl font-bold text-transparent my-4"/>
    <SupportBento />

    <Title title="Mis videos más recientes" class="text-center bg-gradient-to-r from-caracol to-celeste bg-clip-text text-5xl font-bold text-transparent my-4"/>
    <SwiperComponent/>
  </main>
</Layout>
