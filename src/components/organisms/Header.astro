---


const bannerImage = "https://links.itssofi.dev/img/bannerYT.png";
---


<header class="w-full  max-w-[768px] relative">

	<div class="banner__container">
		<img src={bannerImage}>
		<div class="reflect"></div>
	</div>
	<div class="profile__container"></div>
</header>




<style>
.banner__container {
	position: relative;
	display: flex;
	flex-direction: column;
	width: 100%;
	max-width: 768px;
	z-index: -1;
}

img {
	height: 40dvh;
	object-fit: cover;
}
.reflect {
	background-size: cover;
	width: 100%;
	height: 14dvh;
	backdrop-filter: blur(26px);
	position: absolute;
	top: 85%;
	background: linear-gradient(to bottom, #58006370, var(--bg-color-default));
	mask-image: linear-gradient(to bottom, #5c0063, #2c014a);
	overflow: hidden;
}
.card__container {
	display: flex;

	gap: 1rem;
}

.card {
	margin-top: 1rem;
	display: flex;
	flex-direction: column;
	gap: 1rem;
	background: black;
	max-width: 30rem;
	color: white;
	padding: 2rem;
	border-radius: 12px;
	& h1 {
		text-align: center;
	}
}

</style>