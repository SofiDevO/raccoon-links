---
import productData from "@data/productData.json";
type Product = {
  title: string;
  imageID: string;
  url: string;
};
---
<div class="swiper__container">
  <swiper-container
    class="swiperProduct"
    effect="cards"
    grab-cursor="true"
    pagination="true"
    pagination-clickable="true"
    navigation="true"
    loop="true"
  >
    {
      productData.map((product: Product) => {
        const { title, imageID: image } = product;
        return (
          <swiper-slide>
            <img src={`https://i.imgur.com/${image}.png`} alt={title} />
          </swiper-slide>
        );
      })
    }
  </swiper-container>

  <style>
